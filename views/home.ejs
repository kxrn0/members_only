<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Members</title>
  </head>
  <body>
    <%- include("./navbar") %>
      <% for (let post of posts) { %>
      <div>
        <a href="<%= `/post/${post._id}` %>"><%= post.title %></a>
        <% if (user && (user.level !== "basic")) { %>
        <a href="/user/<%= post.author.username %>">u/<%= post.author.username %></a>
        <span
          ><%= (new Date(post.createdAt)).toDateString() %></span
        >
        <% } %>
        <p><%= post.body %></p>
      </div>
      <% } %>
      <%- include("./indices") %>
  </body>
</html>
